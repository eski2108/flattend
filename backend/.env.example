# ============================================================
# COINHUBX BACKEND - ENVIRONMENT CONFIGURATION
# ============================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
# ============================================================

# ------------------------------------------------------------
# DATABASE - MongoDB Atlas
# ------------------------------------------------------------
# Connection string to MongoDB Atlas cluster
# Get from: https://cloud.mongodb.com/ > Connect > Connect your application
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Database name to use
DB_NAME=coinhubx_production

# ------------------------------------------------------------
# SECURITY - Authentication & Encryption
# ------------------------------------------------------------
# JWT secret for signing tokens (generate with: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET=your-64-character-hex-string-here-generate-new-one

# Application secret key for encryption (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-64-character-hex-string-here-generate-new-one

# Internal API key for service-to-service communication (generate with: python -c "import secrets; print(secrets.token_hex(32))")
INTERNAL_API_KEY=your-64-character-hex-string-here-generate-new-one

# ------------------------------------------------------------
# GOOGLE OAUTH - Social Login
# ------------------------------------------------------------
# Get from: https://console.cloud.google.com/ > APIs & Services > Credentials > OAuth 2.0
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-client-secret

# ------------------------------------------------------------
# EMAIL - SendGrid
# ------------------------------------------------------------
# Get from: https://app.sendgrid.com/settings/api_keys
# Required for: registration emails, password reset, withdrawal confirmations, notifications
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Verified sender email (must be verified in SendGrid)
SENDER_EMAIL=noreply@yourdomain.com

# ------------------------------------------------------------
# SMS - Twilio (Phone Verification & 2FA)
# ------------------------------------------------------------
# Get from: https://console.twilio.com/
# Required for: phone verification, SMS 2FA, high-value transaction alerts
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Twilio Verify Service SID - Create at: Twilio Console > Verify > Services
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ------------------------------------------------------------
# CRYPTO PAYMENTS - NOWPayments
# ------------------------------------------------------------
# Get from: https://account.nowpayments.io/ > Store Settings > API Keys
# Required for: crypto deposits, withdrawals, instant buy/sell
NOWPAYMENTS_API_KEY=your-nowpayments-api-key

# IPN Secret for webhook verification - Set in NOWPayments dashboard
NOWPAYMENTS_IPN_SECRET=your-ipn-secret-key

# Default payout address for platform withdrawals (optional)
NOWPAYMENTS_PAYOUT_ADDRESS=your-btc-address

# ------------------------------------------------------------
# TELEGRAM - Admin Notifications (Optional)
# ------------------------------------------------------------
# Get from: @BotFather on Telegram > /newbot
# Used for: admin alerts, trade notifications, system alerts
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Admin contact info for alerts
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PHONE_NUMBER=+1234567890

# ------------------------------------------------------------
# URLS - Application Endpoints
# ------------------------------------------------------------
# Public backend URL (used for OAuth callbacks, webhooks, email links)
BACKEND_URL=https://yourdomain.com

# Public frontend URL (used for email links, redirects)
FRONTEND_URL=https://yourdomain.com

# Allowed CORS origins (comma-separated, no spaces)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ------------------------------------------------------------
# CACHING - Redis (Optional)
# ------------------------------------------------------------
# Redis URL for caching (falls back gracefully if not available)
REDIS_URL=redis://localhost:6379

# ------------------------------------------------------------
# ENVIRONMENT FLAGS
# ------------------------------------------------------------
# Set to true for production deployment
PRODUCTION=false

# Enable debug logging (set to false in production)
DEBUG=true
